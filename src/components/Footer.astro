---
import Container from '@/components/Container.astro'
import Bordered from '@/layouts/Bordered.astro'
import { Dices } from 'lucide-react'
import ContactForm from './ContactForm'
---

<Container class="mx-auto flex flex-col gap-y-6">
  <section class="flex w-full flex-col gap-16 pt-[2em]">
    <ContactForm client:load />

    <div class="w-full">
      <Bordered>
        <div class="h-[300px]">
          <div class="flex h-full w-full items-center justify-center">
            <h1
              class="absolute font-vaxen text-[64px] text-accent sm:text-[124px] md:text-[150px] xl:text-[240px] 2xl:text-[300px]"
            >
              2025
            </h1>
            <p
              class="fg-accent z-[2] font-kleemax text-[16px] text-foreground sm:text-[32px] md:text-[40px] xl:text-[64px] 2xl:text-[76px]"
            >
              SASANK REDDY
            </p>
          </div>
        </div>
      </Bordered>
    </div>

    <div class="flex w-full flex-row-reverse justify-between">
      <div class="flex h-4 items-center gap-4">
        <a
          href="https://amrita.town/prev"
          class="text-sm font-medium uppercase text-primary hover:brightness-125 dark:hover:brightness-125"
        >
          <div class="h-4 w-4 rotate-90 fill-[#E9EAE2]">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 72 100">
              <path
                d="M70.4,58.9L70.1,57l-0.2-0.9c0,0,0,0,0,0l-0.2-0.9c-18.7,3.4-27.6,13.4-31.9,22.7V3h-0.9H35h-0.9v75.3c-4.2-9.7-13.2-20.2-31.9-23.2L1.9,57L1.7,58c0,0,0,0,0,0l-0.1,0.9c28.7,4.5,32.2,27.6,32.5,35.3c-0.1,1.7,0,2.7,0,2.8l0.9-0.1v0l0.5,0l2.4,0.1c0,0,0-0.6,0-1.5v-2.5C38.4,84.4,42.5,63.9,70.4,58.9z"
              ></path>
            </svg>
          </div>
        </a>

        <a
          href="https://amrita.town/random"
          class="fill-[#E9EAE2] text-sm font-medium uppercase text-accent hover:brightness-125 dark:hover:brightness-125"
        >
          <Dices />
        </a>

        <a
          href="https://amrita.town/next"
          class="text-sm font-medium uppercase text-primary hover:brightness-125 dark:hover:brightness-125"
        >
          <div class="h-4 w-4 -rotate-90 fill-[#E9EAE2]">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 72 100">
              <path
                d="M70.4,58.9L70.1,57l-0.2-0.9c0,0,0,0,0,0l-0.2-0.9c-18.7,3.4-27.6,13.4-31.9,22.7V3h-0.9H35h-0.9v75.3c-4.2-9.7-13.2-20.2-31.9-23.2L1.9,57L1.7,58c0,0,0,0,0,0l-0.1,0.9c28.7,4.5,32.2,27.6,32.5,35.3c-0.1,1.7,0,2.7,0,2.8l0.9-0.1v0l0.5,0l2.4,0.1c0,0,0-0.6,0-1.5v-2.5C38.4,84.4,42.5,63.9,70.4,58.9z"
              ></path>
            </svg>
          </div>
        </a>
      </div>
      <a
        href="https://amrita.town/"
        class="h-full self-center text-sm font-medium uppercase text-primary hover:brightness-125 dark:hover:brightness-125"
      >
        <p>Amrita.town</p>
      </a>
    </div>
  </section>
</Container>
